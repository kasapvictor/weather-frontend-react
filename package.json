{
  "name": "weather-frontend2",
  "source": [
    "src/index.html"
  ],
  "type": "module",
  "scripts": {
    "server": "parcel",
    "dev": "parcel build --no-optimize",
    "build": "parcel build --public-url ./",
    "test": "npx jest",
    "test-coverage": "npx jest --coverage"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.1",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.4.3",
    "parcel": "^2.0.1",
    "parcel-namer-rewrite": "^2.0.0-rc.1",
    "posthtml": "^0.16.6",
    "posthtml-doctype": "^1.1.1",
    "posthtml-include": "^1.7.2",
    "sharp": "^0.29.3",
    "posthtml-beautify": "^0.7.0",
    "prettier": "^2.4.0"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "dotenv": "^16.0.0",
    "lodash": "^4.17.21",
    "on-change": "^4.0.0"
  },
  "posthtml": {
    "plugins": {
      "posthtml-include": {
        "root": "./src"
      },
      "posthtml-doctype": {
        "doctype": "HTML 5"
      },
      "posthtml-beautify": {
        "rules": {
          "indent": "tab",
          "blankLines": false,
          "sortAttr": false,
          "eol": "\n",
          "eof": "\n",
          "maxlen": "120"
        }
      }
    }
  },
  "htmlnano": {
    "collapseAttributeWhitespace": true,
    "minifyConditionalComments": true,
    "collapseBooleanAttributes": true,
    "collapseWhitespace": false,
    "removeComments": true,
    "minifyJson": false,
    "minifySvg": false
  },
  "sass": {
    "includePaths": [
      "node_modules"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "grid": true,
        "overrideBrowserslist": [
          "> 1%",
          "last 4 versions",
          "ie >= 9"
        ]
      }
    }
  },
  "cssnano": {
    "preset": [
      "default",
      {
        "minifyFontValues": {
          "removeQuotes": false
        },
        "normalizeUrl": false
      }
    ]
  },
  "sharp": {
    "jpeg": {
      "quality": 30,
      "chromaSubsampling": "4:4:4"
    },
    "webp": {
      "nearLossless": true
    },
    "png": {
      "palette": true
    }
  },
  "notes": {
    "parcel-docs": "https://parceljs.org/plugin-system/overview/",
    "sharp-image-compressor": "https://sharp.pixelplumbing.com/api-output#jpeg",
    "parcel-namer-rewrite-example": "https://github.com/ol-loginov/parcel-namer-rewrite/issues/6#issue-992916247"
  },
  "parcel-namer-rewrite": {
    "rules": {
      "(.*)\\.(woff2?|ttf)": "fonts/$1.$2",
      "(.*)\\.(png|gif|jpg|jpeg)": "img/$1.$2",
      "(.*)\\.(svg)": "svg/$1.$2",
      "(.*)\\.(css)": "css/$1.{hash}.$2",
      "(.*)\\.(js)": "js/$1.{hash}.$2"
    }
  }
}
